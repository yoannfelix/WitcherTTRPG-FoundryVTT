<form class="{{cssClass}}" autocomplete="off">
    <div class="sidebar">
                  <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="128" width="64"/>
    </div>
    <div class="sheet-content">
            <div class="item-header">
                 <table>
                    <tr>
                        <th style="text-align:left;">{{localize "witcherrpg.weaponAtt.weaponName"}}</th>
                        <th style="text-align:right;">{{localize "witcherrpg.weaponAtt.weaponHand"}}</th>
                    </tr>
                    <tr>
                        <td>
                            <h3><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h3>
                        </td>
                        <td>
                            <h3 style="text-align:right;"><input name="data.weapon.weaponHand" type="text" value="{{data.weapon.weaponHand}}"/></h3>
                        </td>              
                    </tr>
                </table>
            </div>
        <div class="item-body">
            <table>
            <tr>
                <th style="text-align:left;">{{localize "witcherrpg.weaponAtt.weaponAcc"}}</th>
                <th style="text-align:center;">{{localize "witcherrpg.weaponAtt.weaponDMG"}}</th>   
                <th style="text-align:center;">{{localize "witcherrpg.weaponAtt.weaponDMGType"}}</th>              
                <th style="text-align:right;">{{localize "witcherrpg.weaponAtt.weaponType"}}</th>
            </tr>
            <tr>
                <td>
                    <input name="data.weapon.weaponAcc" type="text" value ="{{data.weapon.weaponAcc}}" data-dtype="Number" />
                </td>
                <td>
                    <h3 style="text-align:center;"><input name="data.weapon.weaponDMG" type="text" value ="{{data.weapon.weaponDMG}}" data-dtype="String" /></h3>
                </td>
                <td>
                    <h3 style="text-align:center;"><input name="data.weapon.weaponDMGType" type="text" value ="{{data.weapon.weaponDMGType}}" data-dtype="String" /></h3>
                </td>
                <td>
                    <select name="data.weapon.weaponType">
                        {{#select data.weaponType}}
                        {{#each config.weaponList as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>
            </tr>
            </table>
            <h3 style="text-align:center; font-weight: bold";>{{localize "witcherrpg.weaponAtt.weaponEffect"}}</h3>
            <textarea name="data.weapon.weaponEffect">{{data.weapon.weaponEffect}}</textarea>
        </div>
        <div class="item-footer">
            <form role="form" class="form-inline">
                <div class="form-group">
                    <h4>{{localize "witcherrpg.weaponAtt.weaponConc"}}  </h4>
                    <h4><input name="data.weapon.weaponConc" type="text" value ="{{data.weapon.weaponConc}}" data-dtype="String" /></h4>
                </div>

            </form>            
            <table>
                    <tr>
                        <th style="text-align:left;">{{localize "witcherrpg.weaponAtt.weaponCost"}}</th>
                        <th style="text-align:center;">{{localize "witcherrpg.weaponAtt.weaponWeight"}}</th>                
                        <th style="text-align:right;">{{localize "witcherrpg.weaponAtt.weaponRel"}}</th>
                    </tr>
                    <tr>
                        <td>
                            <h3><input name="data.weapon.weaponCost" type="text" value ="{{data.weapon.weaponCost}}" data-dtype="Number" /></h3>
                        </td>
                        <td>
                            <h3 style="text-align:center;"><input name="data.weapon.weaponWeight" type="text" value ="{{data.weapon.weaponWeight}}" data-dtype="Number" /></h3>
                        </td>
                        <td>
                            <h3 style="text-align:right;"><input name="data.weapon.weaponRel" type="text" value ="{{data.weapon.weaponRel}}" data-dtype="Number" /></h3>
                        </td>
                    </tr>
            </table>
        </div>
    </div>
</form>